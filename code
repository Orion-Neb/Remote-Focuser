#include <WiFi.h>
#include <WebServer.h>
#define STEP_PIN 5    
#define DIR_PIN  27   
#define EN_PIN   19   

WebServer server(80);

bool motorRunning = false;
bool dirState = true;
int stepDelay = 3000; 
unsigned long lastStepTime = 0;

void handleRoot() {
  String html = R"rawliteral(
  <!DOCTYPE html>
  <html>
  <head>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <style>
      body {
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(to right, #2c3e50, #3498db);
        color: white;
        margin: 0;
        padding: 0;
        text-align: center;
      }
      .container {
        padding: 30px;
        max-width: 600px;
        margin: auto;
        background: rgba(0, 0, 0, 0.4);
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.4);
      }
      h1 {
        font-size: 32px;
        margin-bottom: 10px;
      }
      p.desc {
        font-size: 16px;
        margin-bottom: 30px;
      }
      button {
        display: block;
        width: 100%;
        padding: 15px;
        margin: 10px 0;
        font-size: 18px;
        background-color: #1abc9c;
        border: none;
        border-radius: 10px;
        color: white;
        cursor: pointer;
        transition: 0.3s;
      }
      button:hover {
        background-color: #16a085;
      }
      .slider-container {
        margin-top: 30px;
        text-align: left;
      }
      input[type=range] {
        width: 100%;
      }
      .label {
        font-size: 16px;
        margin-bottom: 5px;
      }
      #speedValue {
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class='container'>
      <h1>Kontrol Fokus Teleskop</h1>
      <p class='desc'>Gunakan tombol di bawah ini untuk mengatur gerakan fokus teleskop Anda. Anda dapat mengubah arah putaran motor dan mengatur kecepatannya secara langsung dari halaman ini.</p>

      <form action='/toggle'><button>ðŸ”ƒ Mulai / Berhenti Motor</button></form>
      <form action='/dir'><button>â†” Ubah Arah Putaran</button></form>

      <div class='slider-container'>
        <form action='/speed'>
          <label class='label'>Kecepatan Motor (Delay dalam Âµs): <span id='speedValue'>)rawliteral";
  html += String(stepDelay);
  html += R"rawliteral(</span></label>
          <input type='range' name='val' min='500' max='15000' value=')rawliteral";
  html += String(stepDelay);
  html += R"rawliteral(' step='100' oninput='updateSpeed(this.value)' onchange='this.form.submit()'>
        </form>
      </div>
    </div>

    <script>
      function updateSpeed(val) {
        document.getElementById('speedValue').innerText = val;
      }
    </script>
  </body>
  </html>
  )rawliteral";

  server.send(200, "text/html", html);
}


void handleToggle() {
  motorRunning = !motorRunning;

  if (motorRunning) {
    Serial.println("[MOTOR] Start");
    digitalWrite(EN_PIN, LOW);    
    digitalWrite(DIR_PIN, dirState);
    lastStepTime = micros();      
  } else {
    Serial.println("[MOTOR] Stop");
    digitalWrite(EN_PIN, HIGH);   
  }

  server.sendHeader("Location", "/");
  server.send(303);
}

void handleDir() {
  dirState = !dirState;
  Serial.print("[DIRECTION] Changed to: ");
  Serial.println(dirState ? "CW" : "CCW");

  if (motorRunning) {
    digitalWrite(DIR_PIN, dirState);
  }

  server.sendHeader("Location", "/");
  server.send(303);
}

void handleSpeed() {
  if (server.hasArg("val")) {
    int val = server.arg("val").toInt();
    if (val >= 500 && val <= 15000) {
      stepDelay = val;
      Serial.print("[SPEED] Step Delay: ");
      Serial.println(stepDelay);
    }
  }
  server.sendHeader("Location", "/");
  server.send(303);
}

void setup() {
  pinMode(STEP_PIN, OUTPUT);
  pinMode(DIR_PIN, OUTPUT);
  pinMode(EN_PIN, OUTPUT);

  digitalWrite(STEP_PIN, LOW);
  digitalWrite(DIR_PIN, dirState);
  digitalWrite(EN_PIN, HIGH);

  Serial.begin(115200);
  delay(1000);
  Serial.println("\n[ESP32] Membuat Access Point...");

  WiFi.softAP("Teleskop_Fokus", "12345678");
  delay(1000);
  Serial.print("AP IP address: ");
  Serial.println(WiFi.softAPIP());

  server.on("/", handleRoot);
  server.on("/toggle", handleToggle);
  server.on("/dir", handleDir);
  server.on("/speed", handleSpeed);

  server.begin();
  Serial.println("Web server siap diakses.");
}

void loop() {
  server.handleClient();

  if (motorRunning) {
    unsigned long now = micros();
    if (now - lastStepTime >= (unsigned long)stepDelay * 2) {
      digitalWrite(STEP_PIN, HIGH);
      delayMicroseconds(stepDelay);
      digitalWrite(STEP_PIN, LOW);
      lastStepTime = now;
    }
  }
}
